{
    "appId": "com.mythmaker-studio.ffxivvfxport",
    "productName": "FFXIV VFX Port",
    "directories": {
        "output": "dist"
    },
    "win": {
        "target": [
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "artifactName": "${name}_${version}_${os}.${ext}"
    },
    "nsis": {
        "artifactName": "ffxiv-vfx-port_win_installer.exe"
    },
    "portable": {
        "artifactName": "ffxiv-vfx-port_win_portable.exe"
    }
}